{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Action": [
                "logs:CreateLogGroup",
                "logs:CreateLogStream",
                "logs:PutLogEvents",
                "cloudwatch:PutMetricData"
            ],
            "Resource": [
                "arn:*:logs:*:*:*",
                "arn:*:cloudwatch:*:*:*"
            ]
        },
        {
            "Effect": "Allow",
            "Action": [
                "lambda:UpdateFunctionConfiguration",
                "dynamodb:*",
                "s3:*"
            ],
            "Resource": "*"
        }
    ]
}